  <%= radio_button_tag "settings[allow_other_login]", "users", @settings["allow_other_login"] == "users" %>
  <%= l(:label_allow_other_login_users)%><br/>
  <%= text_field_tag "settings[allow_other_login_users]", @settings["allow_other_login_users"] %><br/>
  <%= radio_button_tag "settings[allow_other_login]", "none", @settings["allow_other_login"] == "none" %>
  <%= l(:label_allow_other_login_none)%><br/>
</p>

<p>
  <%= content_tag(:label, l(:label_ldap_checked_auto_registration))%>
