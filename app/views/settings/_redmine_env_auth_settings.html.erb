<p>
  <%= content_tag(:label, l(:label_enabled))%>
  <%= check_box_tag "settings[enabled]", true, @settings["enabled"] == "true" %>
</p>

<p>
  <%= content_tag(:label, l(:label_env_variable_name)) %>
  <%= text_field_tag "settings[env_variable_name]", @settings["env_variable_name"] %><br/>
  <%= l(:label_default)%>: REMOTE_USER
</p>

<p>
  <%= content_tag(:label, l(:label_remove_suffix)) %>
  <%= text_field_tag "settings[remove_suffix]", @settings["remove_suffix"] %><br/>
  <%= l(:label_remove_suffix_help)%>
</p>

<p>
  <%= content_tag(:label, l(:label_redmine_user_property))%>
